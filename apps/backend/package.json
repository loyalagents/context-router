{
  "name": "backend",
  "version": "1.0.0",
  "description": "NestJS GraphQL monolith with Prisma and PostgreSQL",
  "main": "dist/main.js",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest --runInBand",
    "test:unit": "jest --selectProjects unit",
    "test:integration": "jest --selectProjects integration --runInBand",
    "test:e2e": "npm run test:db:up && npm run test:db:migrate && npm run test:e2e:tests-only",
    "test:e2e:tests-only": "jest --selectProjects e2e --runInBand",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage --selectProjects unit",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:db:up": "docker compose -f docker-compose.test.yml up -d",
    "test:db:down": "docker compose -f docker-compose.test.yml down",
    "test:db:migrate": "DATABASE_URL=postgresql://postgres:postgres@localhost:5433/context_router_test npx prisma migrate deploy",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "pnpm prisma:generate && docker compose exec app npx prisma migrate dev",
    "prisma:migrate:deploy": "docker compose exec app npx prisma migrate deploy",
    "prisma:studio": "prisma studio",
    "prisma:seed": "docker compose exec app npx ts-node prisma/seed.ts",
    "db:push": "pnpm prisma:generate && docker compose exec app npx prisma db push",
    "db:reset": "docker compose exec app npx prisma migrate reset"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/loyalagents/context-router.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/loyalagents/context-router/issues"
  },
  "homepage": "https://github.com/loyalagents/context-router#readme",
  "dependencies": {
    "@apollo/server": "^4.11.2",
    "@modelcontextprotocol/sdk": "^1.21.1",
    "@nestjs/apollo": "^12.2.1",
    "@nestjs/common": "^10.4.15",
    "@nestjs/config": "^3.3.0",
    "@nestjs/core": "^10.4.15",
    "@nestjs/graphql": "^12.2.1",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^10.4.15",
    "@prisma/client": "^6.19.0",
    "auth0": "^5.1.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "graphql": "^16.12.0",
    "graphql-type-json": "^0.3.2",
    "jwks-rsa": "^3.2.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "uuid": "^13.0.0",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.4.8",
    "@types/supertest": "^6.0.2",
    "dotenv": "^16.4.5",
    "supertest": "^7.0.0",
    "@nestjs/schematics": "^10.2.3",
    "@nestjs/testing": "^10.4.15",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/multer": "^2.0.0",
    "@types/node": "^22.0.0",
    "@types/passport-jwt": "^4.0.1",
    "@types/uuid": "^11.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.0",
    "jest": "^29.7.0",
    "prettier": "^3.4.0",
    "prisma": "^6.19.0",
    "ts-jest": "^29.2.0",
    "ts-loader": "^9.5.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.0"
  }
}
